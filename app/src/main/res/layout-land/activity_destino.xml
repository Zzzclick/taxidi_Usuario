<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_destino"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zzzclcik.pruebafirebase.Destino"
    android:background="@drawable/logo">

    <TextView
        android:id="@+id/tvPlaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place Name"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_below="@+id/tvPlaceAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvPlaceAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btGetPlace"
        android:text="DirecciÃ³n"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TiempoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiempo aproximado"
        android:textAlignment="center"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="20sp"
        android:layout_below="@+id/tvPlaceName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <WebView
        android:id="@+id/wvAttribution"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/cardview_light_background"
        android:text="Attribution"
        android:textSize="1sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_below="@+id/CostoTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Costo  aproximado"
        android:textAlignment="center"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="20sp"
        android:layout_below="@+id/TiempoTextView"
        android:layout_toLeftOf="@+id/wvAttribution"
        android:layout_toStartOf="@+id/wvAttribution"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/CostoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btGetPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo1"
        android:text="Selecionar destino"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:drawableLeft="@drawable/destino_dos"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wvAttribution"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boton_redondo2"
        android:text="Aceptar"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:drawableLeft="@drawable/listo"/>

</RelativeLayout>
