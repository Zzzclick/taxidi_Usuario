<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calificar_taxi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zzzclcik.pruebafirebase.CalificarTaxi"
    android:background="@drawable/logo">

    <RatingBar
        android:id="@+id/ratingBarTaxis"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:numStars="5"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:stepSize="0.1"
        android:layout_below="@+id/textViewAmabilidad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Enviarbutton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo1"
        android:drawableLeft="@drawable/calificar"
        android:text="Calificar"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ratingBarTaxis4"
        android:layout_toEndOf="@+id/ratingBarTaxis4" />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Califica el taxi"
        android:textAlignment="center"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/comentarioEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Enviarbutton"

        android:ems="10"
        android:hint="Escribe un comentario"
        android:inputType="textMultiLine"
        android:maxLength="45"
        android:textColorHint="@color/cast_intro_overlay_background_color"
        android:layout_toEndOf="@+id/Enviarbutton"
        android:layout_below="@+id/ratingBarTaxis3"
        android:layout_alignLeft="@+id/ratingBarTaxis3"
        android:layout_alignStart="@+id/ratingBarTaxis3" />

    <RatingBar
        android:id="@+id/ratingBarTaxis1"
        android:stepSize="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_below="@+id/textViewManejo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:id="@+id/ratingBarTaxis3"
        android:stepSize="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_below="@+id/textViewServicio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:id="@+id/ratingBarTaxis2"
        android:stepSize="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_below="@+id/textViewUnidad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:id="@+id/ratingBarTaxis4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:stepSize="0.1"
        android:layout_below="@+id/textViewAtencion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewManejo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ratingBarTaxis1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/ratingBarTaxis1"
        android:layout_below="@+id/textViewTitulo"
        android:text="Manejo"
        android:textAlignment="center"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textViewUnidad"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ratingBarTaxis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ratingBarTaxis"
        android:layout_below="@+id/ratingBarTaxis"
        android:text="Unidad"
        android:textAlignment="center"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textViewServicio"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/ratingBarTaxis1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/ratingBarTaxis1"
        android:layout_below="@+id/ratingBarTaxis1"
        android:text="Servicio"
        android:textAlignment="center"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textViewAtencion"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/ratingBarTaxis2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ratingBarTaxis2"
        android:layout_below="@+id/ratingBarTaxis2"
        android:text="AtenciÃ³n"
        android:textAlignment="center"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewAmabilidad"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ratingBarTaxis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ratingBarTaxis"
        android:layout_below="@+id/textViewTitulo"
        android:text="Amabilidad"
        android:textAlignment="center"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="13sp" />

</RelativeLayout>
