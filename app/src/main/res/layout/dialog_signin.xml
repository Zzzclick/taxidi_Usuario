<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"

        android:text="Registra tu num celular para un mejor servicio"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TelEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/info_text"
        android:ems="10"
        android:hint="Ejemplo: 7718736287"
        android:inputType="phone"
        android:maxLength="12"
        android:phoneNumber="false"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textSize="15sp" />

    <Button
        android:id="@+id/RegistarBoton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo1"
        android:text=" Registrar "
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/nuevo_usuario"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/TelEditText"
        android:layout_toLeftOf="@+id/cancelBoton2"
        android:layout_toStartOf="@+id/cancelBoton2"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp" />
    <Button
        android:id="@+id/cancelBoton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo2"
        android:text=" No gracias "
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/botoncancel"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_alignBaseline="@+id/RegistarBoton2"
        android:layout_alignBottom="@+id/RegistarBoton2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>